<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:fitsSystemWindows="true"
    tools:context=".AddAlert"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back01"
        >

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/shape_toolbar">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fielder 2.0"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc@gmail.com"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/section2"
            android:layout_width="411dp"
            android:layout_height="700dp"
            android:layout_below="@+id/toolbar"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/addTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#068152"
                android:text="Add Alert"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avocado"
                android:textSize="35sp" />


            <RelativeLayout
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/alert_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cursor"
                    android:hint="Context"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:paddingStart="50dp"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:textColor="#333"
                    android:textColorHint="#9E9E9E"
                    android:textSize="18sp">

                </EditText>

                <ImageView
                    android:id="@+id/number_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/alert" />

                <EditText
                    android:id="@+id/alert_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alert_context"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/cursor"
                    android:hint="Message"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:paddingStart="50dp"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:textColor="#333"
                    android:textColorHint="#9E9E9E"
                    android:textSize="18sp">

                </EditText>

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/alert_context"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/edit" />

                <Spinner
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alert_text"
                    android:background="@drawable/cursor"
                    android:layout_marginBottom="20dp"
                    android:hint="Field's Number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:paddingStart="50dp"
                    android:paddingLeft="17dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textColor="#333"
                    android:textColorHint="#9E9E9E"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:id="@+id/owner_icon"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/alert_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/field" />

            </RelativeLayout>

            <Button
                android:id="@+id/button1"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cursor_color"
                android:text="Add"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"></Button>


            <Button
                android:id="@+id/retour"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/cursor_color"
                android:text="Return"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"></Button>
        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>