<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_page"
    android:orientation="vertical"
    android:background="@drawable/back01"
    android:gravity="center_horizontal"
    tools:context=".AddField"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/shape_toolbar">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fielder 2.0"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/addTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:textColor="#068152"
            android:text="Add Field"
            android:fontFamily="@font/avocado"
            android:textSize="35sp" />


        <RelativeLayout
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cursor"
                android:hint="Field's Number"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"></EditText>

            <ImageView
                android:id="@+id/number_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/id" />

            <EditText
                android:id="@+id/surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/numero"
                android:background="@drawable/cursor"
                android:hint="Field's Surface"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"></EditText>

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/numero"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/surface" />

            <EditText
                android:id="@+id/localisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surface"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cursor"
                android:hint="Field's localisation"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="40dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/localisation_icon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@+id/surface"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/localisation" />

            <EditText
                android:id="@+id/owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/localisation"
                android:background="@drawable/cursor"
                android:hint="Field's owner"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="40dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/owner_icon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@+id/localisation"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/owner" />

        </RelativeLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cursor_color"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"></Button>


        <Button
            android:id="@+id/retour"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/cursor_color"
            android:text="Return"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_nav"
        />
</LinearLayout>