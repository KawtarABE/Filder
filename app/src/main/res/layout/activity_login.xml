<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Login"
    >

    <LinearLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/top_background" >
            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_text"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:src="@drawable/logo_1"
            />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:text="Log in with your personal information"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cursor"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"></EditText>

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/email_1" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_email"
                android:background="@drawable/cursor"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="40dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@+id/login_email"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/lock" />

            <Button
                android:id="@+id/button_login"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/login_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@drawable/cursor_color"
                android:text="LogIn"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_login"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Do you not have an account?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_login"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:text="Sign Up"
                android:textColor="#068152"
                android:textStyle="bold"
                android:textSize="15sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="50dp"
            android:textColor="#1566e0"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/top_background" >
                </FrameLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logup_logo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:src="@drawable/logo_1"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/logup_logo"
                android:layout_centerHorizontal="true"
                android:text="Fill in with your personal information"
                android:textSize="15sp" />

            <!--  <TextView
                  android:id="@+id/name1"
                  android:layout_below="@+id/text1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="24dp"
                  android:text="Name"
                  android:textSize="20sp"
                  />

              <EditText
                  android:id="@+id/name"
                  android:layout_below="@+id/name1"
                  android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:layout_marginTop="8dp"
                  android:inputType="text"
                  android:background="@android:drawable/editbox_background_normal"
                  android:textColor="#333"
                  android:textSize="18sp"
                  android:padding="8dp"
                  android:hint="Enter your name"
                  android:textColorHint="#9E9E9E"
                  /> -->


            <EditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cursor"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/user_icon_reg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/email_1" />


            <EditText
                android:id="@+id/password_reg"
                android:layout_below="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cursor"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="12dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/password_icon_reg"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@+id/email_reg"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/lock" />

            <Spinner
                android:id="@+id/user_type"
                android:layout_below="@+id/password_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cursor"
                android:maxLines="1"
                android:padding="15dp"
                android:paddingStart="50dp"
                android:paddingLeft="17dp"
                android:paddingTop="15dp"
                android:paddingBottom="40dp"
                android:textColor="#333"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"
                android:entries="@array/items"
                />


            <ImageView
                android:id="@+id/password_icon_reg1"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@+id/password_reg"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/user" />

            <Button
                android:id="@+id/button1"
                android:layout_below="@+id/user_type"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@drawable/cursor_color"
                android:text="LogUp"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                ></Button>


            <TextView
                android:layout_below="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alrady have an account?"
                android:layout_marginLeft="50dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/login"
                android:layout_below="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:clickable="true"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="#068152"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>